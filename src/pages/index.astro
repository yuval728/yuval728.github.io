---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getContent } from '../lib/content';

const projects = await getContent('projects');
const research = await getContent('research');
const blog = await getContent('blog');

const skills = {
  "Languages": ["Python", "JavaScript/TypeScript", "C++"],
  "ML Frameworks": ["PyTorch", "TensorFlow", "JAX"],
  "Cloud & MLOps": ["AWS", "GCP", "MLflow", "Docker"],
  "Specialties": ["Computer Vision", "NLP", "Reinforcement Learning"]
};
---

<Layout title="AI Engineer Portfolio">
  <Header />
  
  <main class="container mx-auto px-6">
    <!-- Hero Section -->
    <section id="home" class="min-h-screen flex items-center justify-center py-20">
      <div class="text-center">
        <img
          src="https://via.placeholder.com/150"
          alt="Profile"
          class="w-32 h-32 rounded-full mx-auto mb-8"
        />
        <h1 class="text-4xl md:text-6xl font-bold mb-4">
          AI Engineer & ML Researcher
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
          Deep Learning Enthusiast | ML Systems Architect
        </p>
        <div class="flex justify-center gap-4">
          <a
            href="#contact"
            class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg transition-colors"
          >
            Contact Me
          </a>
          <a
            href="#resume"
            class="border border-primary-600 text-primary-600 hover:bg-primary-50 dark:hover:bg-primary-900 px-6 py-3 rounded-lg transition-colors"
          >
            View Resume
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center">About Me</h2>
        <div class="space-y-6 text-lg text-gray-600 dark:text-gray-300">
          <div>
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Hi, I'm [Your Name] üëã</h3>
            <p>I'm a passionate AI Engineer specializing in developing cutting-edge machine learning solutions. With expertise spanning computer vision, natural language processing, and reinforcement learning, I help organizations build and deploy intelligent systems that solve real-world problems.</p>
          </div>

          <div>
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">üöÄ What I Do</h3>
            <ul class="list-disc list-inside space-y-2">
              <li><strong>ML System Design</strong> - Architecting end-to-end machine learning solutions</li>
              <li><strong>AI Research</strong> - Pushing boundaries in deep learning and neural networks</li>
              <li><strong>Team Leadership</strong> - Guiding technical teams on complex AI initiatives</li>
              <li><strong>Innovation</strong> - Developing novel approaches to challenging ML problems</li>
            </ul>
          </div>

          <div>
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">üíª Technical Skills</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {Object.entries(skills).map(([category, items]) => (
                <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-6">
                  <h4 class="font-semibold text-gray-900 dark:text-white mb-3">{category}</h4>
                  <div class="flex flex-wrap gap-2">
                    {items.map((item) => (
                      <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full text-sm">
                        {item}
                      </span>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div>
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">üèÜ Key Achievements</h3>
            <ul class="list-disc list-inside space-y-2">
              <li>Led development of production computer vision systems for autonomous vehicles</li>
              <li>Architected and deployed large-scale NLP models serving millions of users</li>
              <li>Published research in top ML conferences (ICML, NeurIPS, ICLR)</li>
              <li>Developed reinforcement learning solutions for industrial robotics</li>
            </ul>
          </div>

          <div>
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">üìö Education</h3>
            <ul class="list-disc list-inside space-y-4">
              <li>
                <strong>Ph.D. in Computer Science</strong>
                <ul class="list-inside ml-6 mt-2 space-y-1 text-gray-500 dark:text-gray-400">
                  <li>Specialization in Machine Learning</li>
                  <li>Research Focus: Deep Learning Architectures</li>
                </ul>
              </li>
              <li>
                <strong>M.S. in Computer Science</strong>
                <ul class="list-inside ml-6 mt-2 space-y-1 text-gray-500 dark:text-gray-400">
                  <li>Focus: Computer Vision & AI</li>
                  <li>Thesis: Neural Networks for Visual Recognition</li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-20">
      <h2 class="text-3xl font-bold mb-8">Featured Projects</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.metadata.projects.map((project) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.map((tag) => (
                  <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full text-sm">
                    {tag}
                  </span>
                ))}
              </div>
              <div class="flex gap-4">
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-600 hover:text-primary-700 font-medium"
                >
                  GitHub ‚Üí
                </a>
                {project.demo && (
                  <a
                    href={project.demo}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-primary-600 hover:text-primary-700 font-medium"
                  >
                    Live Demo ‚Üí
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Blog Section -->
    <section id="blog" class="py-20">
      <h2 class="text-3xl font-bold mb-8">Latest Blog Posts</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blog.metadata.posts.map((post) => (
          <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">{post.title}</h3>
              <div class="flex flex-wrap gap-2 mb-4">
                {post.tags.map((tag) => (
                  <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full text-sm">
                    {tag}
                  </span>
                ))}
              </div>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                {post.preview}
              </p>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  {new Date(post.date).toLocaleDateString()}
                </span>
                <a
                  href={`/blog/${post.slug}`}
                  class="text-primary-600 hover:text-primary-700 font-medium"
                >
                  Read More ‚Üí
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Research Section -->
    <section id="research" class="py-20">
      <h2 class="text-3xl font-bold mb-8">Research & Publications</h2>
      <div class="space-y-8">
        {research.metadata.papers.map((paper) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-2">{paper.title}</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Authors: {paper.authors.join(', ')}
            </p>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Conference: {paper.conference}
            </p>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Abstract: {paper.abstract}
            </p>
            <a
              href={paper.link}
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary-600 hover:text-primary-700 font-medium"
            >
              View Publication ‚Üí
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Resume Section -->
    <section id="resume" class="py-20">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 text-center">
          <h2 class="text-3xl font-bold mb-6">Resume</h2>
          <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
            Senior AI Engineer with expertise in machine learning, computer vision, and natural language processing. 
            Experienced in developing and deploying large-scale AI systems, leading technical teams, and conducting cutting-edge research.
          </p>
          <a
            href="/resume.pdf"
            class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white px-8 py-3 rounded-lg transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd" />
            </svg>
            Download Full Resume
          </a>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20">
      <h2 class="text-3xl font-bold mb-8">Contact Me</h2>
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <p class="text-lg text-gray-600 dark:text-gray-400 mb-6">
            I'm always open to new opportunities and collaborations. Feel free to reach out!
          </p>
          <div class="space-y-4">
            <a
              href="mailto:contact@example.com"
              class="flex items-center text-gray-600 dark:text-gray-400 hover:text-primary-600"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
              contact@example.com
            </a>
            <a
              href="https://github.com"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center text-gray-600 dark:text-gray-400 hover:text-primary-600"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
            <a
              href="https://linkedin.com"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center text-gray-600 dark:text-gray-400 hover:text-primary-600"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              LinkedIn
            </a>
          </div>
        </div>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </section>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 5rem;
  }
</style>